<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.developer.julio.complejoborjanathan.Login"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/area_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtpass"
        android:layout_alignEnd="@+id/txtpass"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        tools:ignore="NotSibling">

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/til_Email"
            android:layout_marginLeft="32dp"
            >
            <EditText
                android:id="@+id/txtemail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/til_email"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/area_pass"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/area_email"
        android:layout_centerHorizontal="true">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_pass"
            android:layout_marginLeft="32dp"
            >

            <EditText
                android:id="@+id/txtpass"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:ems="5"
                android:hint="password"
                android:inputType="textPassword"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:layout_centerHorizontal="true" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
<!--button bar-->
    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/ingresar"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
